<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/android">

    <TextView
            android:layout_width="200dp"
            android:textColor="#000000"
            android:layout_height="40dp"
            android:id="@+id/textwelcome" android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textemail"
        android:layout_below="@+id/textwelcome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="30dp"
        android:layout_alignRight="@+id/textwelcome"
        android:layout_alignEnd="@+id/textwelcome" />

    <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Logout"
            android:id="@+id/logout"
            android:textSize="13dp"
            android:textColor="#000000"
            android:layout_below="@+id/btchangepass"
            android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/btchangepass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Change Password"
        android:textColor="#000000"
        android:textSize="13dp"
        android:layout_below="@+id/textcreated_at"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="User Panel"
            android:id="@+id/textView" android:layout_below="@+id/logout" android:layout_alignParentRight="true"
            android:textSize="18dp" android:textColor="#000000" android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textcreated_at"
        android:layout_below="@+id/textemail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textemail"
        android:layout_alignEnd="@+id/textemail"
        android:height="35dp" />

</RelativeLayout>